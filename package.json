{
  "name": "@epig/locale-provider",
  "version": "0.0.1",
  "description": "国际化组件",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "rm -rf lib && tsc",
    "precommit": "lint-staged && tsc",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "src/**/*.tsx": [
      "tslint -c tslint.json",
      "jest --findRelatedTests"
    ],
    "src/**/*.ts": [
      "tslint -c tslint.json",
      "jest --findRelatedTests"
    ]
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evel-pig/locale-provider.git"
  },
  "keywords": [
    "react",
    "locale"
  ],
  "author": "infeng",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/evel-pig/locale-provider/issues"
  },
  "homepage": "https://github.com/evel-pig/locale-provider#readme",
  "devDependencies": {
    "@types/enzyme": "^3.9.0",
    "@types/jest": "^24.0.9",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "babel-jest": "^24.1.0",
    "enzyme": "^3.9.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "dependencies": {
    "enzyme-adapter-react-16": "^1.10.0"
  }
}
